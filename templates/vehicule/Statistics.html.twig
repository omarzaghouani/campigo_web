{% extends 'base.html.twig' %}

{% block title %}Histogram of Vehicles with Highest Prices{% endblock %}

{% block body %}
    <h1>Histogram of Vehicles with Highest Prices</h1>

    <div class="histogram">
        {% for vehicle in highestPricedVehicles %}
            <div class="bar" style="height: {{ vehicle.prixuni_max/10 }}px;"></div>
            <span class="label">{{ vehicle.numV }}</span>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .histogram {
            display: flex;
            align-items: flex-end;
            height: 300px; /* Adjust height as needed */
            width: 100%;
        }

        .bar {
            background-color: #36a2eb;
            margin-right: 5px;
            width: 30px; /* Adjust width as needed */
        }

        .label {
            margin-top: 5px;
            text-align: center;
        }
    </style>
{% endblock %}
